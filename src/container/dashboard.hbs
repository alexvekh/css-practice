                <span class='icon analytic__arrow' style="background-image: url('/svg/analytic/blue-arrow.svg')"></span>
              </div>
            </div>

            <div class='analytic analytic--double analytic--blue'>
              <span class='icon analytic__button icon--button icon--color-blue' style="background-image: url('/svg/analytic/order.svg')"></span>
              <div class='relative vertical vertical--small'>
                <div class='analytic__title text text--light'>$961 </div>
                <div class='text text--lighter'>Total order
                </div>
                <span class='icon analytic__arrow' style="background-image: url('/svg/analytic/blue-arrow.svg')"></span>
              </div>
            </div>

            <div class='analytic analytic--horizontal analytic--blue'>
              <span class='icon analytic__button icon--button icon--color-blue' style="background-image: url('/svg/analytic/erning.svg')"></span>
              <div class='relative vertical vertical--small'>
                <div class='analytic__small-title text text--light'>$203k </div>
                <div class='text text--lighter'>Total income
                </div>
              </div>
            </div>

            <div class='analytic analytic--horizontal border'>
              <span class='icon analytic__button icon--button icon--color-yellow' style="background-image: url('/svg/analytic/store.svg')"></span>
              <div class='relative vertical vertical--small'>
                <div class='analytic__small-title text text--bold'>$203k
                </div>
                <div class='text text-grey'>Total income
                </div>
              </div>
            </div>

          </section>

          <section class='double__main'>
            <div class='box'>
              <div class='box--info vertical'>
                <div class='text text--heading'>Purchase list</div>
                <div class='divider'></div>
                <div class='purchase-item'>
                  <div class='text'>ID437661</div>
